<!DOCTYPE html>
<html>
<head>
<title>Issue Tracker</title>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>

html {
    height: 100%;
    width: 100%;
  }
  body {font-family: Arial, Helvetica, sans-serif;}
  form {border: 3px solid #f1f1f1;}
  
  input[type=text], input[type=password] {
    width: 100%;
    padding: 10px 15px;
    margin: 5px 0;
    display: inline-block;
    border: 1px solid #ccc;
    box-sizing: border-box;
  }
  
  button {
    background-color: #04AA6D;
    color: white;
    padding: 14px 10px;
    margin: 5px 0;
    border: none;
    cursor: pointer;
    width: 100%;
  }
  
  button:hover {
    opacity: 0.8;
  }
  
  .cancelbtn {
    width: auto;
    padding: 10px 18px;
    background-color: #f44336;
  }
  .container {
    padding: 10px;
    max-width: 500px;
    margin: auto;
  
  }
  
  span.newtask {
    float: right;
    padding-top: 16px;
  }
  
  /* Change styles for span and cancel button on extra small screens */
  @media screen and (max-width: 200px) {
    span.newtask {
       display: block;
       float: none;
    }
    .cancelbtn {
       width: 100%;
    }
  }
  center{
      font-size: 50px;
      color: white;
      background-color: black;
      font-family: monospace;
  }
  h3{
    font-size: 35px;
  }
  
  ul {
    margin: 0;
    padding: 0;
  }
  
  /* Style the list items */
  ul li {
    cursor: pointer;
    position: relative;
    padding: 12px 8px 12px 40px;
    list-style-type: none;
    background: #eee;
    font-size: 18px;
    transition: 0.2s;
    
    /* make the list items unselectable */
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
  }

  
  /* Set all odd list items to a different color (zebra-stripes) */
  ul li:nth-child(odd) {
    background: #f9f9f9;
  }
  
  /* Darker background-color on hover */
  ul li:hover {
    background: #ddd;
  }
  li{
    list-style-type: none;
  }

  
  /* When clicked on, add a background color and strike out text */
  ul li.checked {
    background: #888;
    color: #fff;
    text-decoration: line-through;
  }
  h2{
    background-color: #313030;
    color: white;
  }
  
  

</style>
</head>
<body>

<center><i class="fa fa-bug" style="font-size:48px;color:red"></i>Issue Tracker</center>

<form action="/create-list" method="POST">

  <div class="container">
    <label for="newtask"><b>Title</b></label>
    <input type="text" name="name" required><br>

    <label for="newtask"><b>Author</b></label>
    <input type="text" name="author" required>

    <label for="newtask1"><b>Description</b></label><br>
    <!--<textarea rows="4" cols="50" name="description" form="usrform">
        Enter text here...</textarea>-->
        <input type="text" name="description" required>
        
        
    <button type="submit" id="createbtn">Create Project</button>
   
  </div>

  <div class="container" style="background-color:#f1f1f1">
    
    
  </div>
</form>
<div>
  <h3><i class="fa fa-list-alt" style="font-size:36px; color: brown;"></i></i>List Of Projects</h3>
  <div class="container">

      <ul>

        <% pro_list.forEach(container => { %>
          <div class="container">
              <h2><%= container.name %></h2>
              <p><strong>Author:</strong> <%= container.author %></p>
              <p><strong>Description:</strong> <%= container.description %></p>
              <a href="/container/<%= container._id %>" class="container-link">View Details</a>
          </div>
        
      <% }) %>

   
    </ul>

  </div>
</div>
 

</body>
</html>
